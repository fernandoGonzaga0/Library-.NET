<UserControl x:Class="Library.Views.SearchOrder"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Library.Views"
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             mc:Ignorable="d" 
             MinHeight="100" MinWidth="1030">

    <Grid>

        <!--Input e botão OK-->
        <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left">

            <Border Height="40" Width="350" Margin="30 0 10 0"
                    CornerRadius="10" Background="#F3E8DF">
                <TextBox Height="40" Width="350" FontFamily="Courier New"
                    FontWeight="SemiBold" BorderThickness="0" FontSize="25"
                    Background="Transparent" Foreground="#57595B"
                    VerticalAlignment="Center" VerticalContentAlignment="Center"
                    HorizontalAlignment="Center" HorizontalContentAlignment="Center"/>
            </Border>

            <Border Width="50" Height="40" 
                    CornerRadius="10"  Background="#57595B">
                <Button Content="OK" FontFamily="Courier New" FontSize="20"
                    Background="Transparent" Foreground="#F3E8DF" BorderThickness="0" x:Name="Ok_Button" Click="Ok_Button_Click"/>
            </Border>

        </StackPanel>

    </Grid>
    
</UserControl>
