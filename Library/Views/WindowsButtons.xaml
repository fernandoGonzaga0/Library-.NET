<UserControl x:Class="Library.Views.WindowsButtons"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Library.Views"
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             mc:Ignorable="d" 
             MinHeight="70" MinWidth="1030">

    <StackPanel>

        <!--Buttons-->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Height="30" Margin="0 5 30 0">
            <Button x:Name="btnMinimize" Width="25" Height="25" Background="Transparent" BorderBrush="Transparent" Click="btnMinimize_Click" Margin="0 0 10 0">
                <fa:IconImage Icon="WindowMinimize" Foreground="#E8D1C5"/>
            </Button>
            <Button x:Name="btnMaximize" Width="25" Height="25" Background="Transparent" BorderBrush="Transparent" Click="btnMaximize_Click" Margin="0 0 10 0">
                <fa:IconImage Icon="WindowMaximize" Foreground="#E8D1C5"/>
            </Button>
            <Button x:Name="btnClose" Width="25" Height="25" Background="Transparent" BorderBrush="Transparent" Click="btnClose_Click" Margin="0 0 10 0">
                <fa:IconImage Icon="WindowClose" Foreground="#E8D1C5"/>
            </Button>  
        </StackPanel>
        
        <!--Title-->
        <TextBlock FontFamily="Cascadia Mono" Foreground="#F1F0E4" FontSize="30" HorizontalAlignment="Center">Library</TextBlock>
        
    </StackPanel>
    
</UserControl>
