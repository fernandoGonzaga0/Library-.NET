<UserControl x:Class="Library.Views.MainMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:views="clr-namespace:Library.Views"
             mc:Ignorable="d" 
             d:DesignHeight="740" d:DesignWidth="1030">

    <Border CornerRadius="0 40 40 0" BorderThickness="0">

        <Grid>

            <Image Source="pack://application:,,,/Library;component/Resources/backgroundMainMenu.jpg"
                   Stretch="UniformToFill"/>

            <!--4 linhas designadas-->
            <Grid Panel.ZIndex="1">

                <Grid.RowDefinitions>
                    <RowDefinition Height="60"/>
                    <RowDefinition Height="130"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <views:WindowsButtons Grid.Row="0"/>

                <views:SearchOrder Grid.Row="1"/>

                <views:BooksPainel Grid.Row="2"/>

            </Grid>
            
            
        </Grid>



    </Border>

</UserControl>