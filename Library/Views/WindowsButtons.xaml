<UserControl x:Class="Library.Views.WindowsButtons"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Library.Views"
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             mc:Ignorable="d" 
             MinHeight="70" MinWidth="1030" Background="Transparent">

    <StackPanel>

        <!--Buttons-->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Height="40" Margin="0 5 10 0">
            <Button x:Name="btnMinimize" Width="45" Height="35" Background="Transparent" BorderBrush="Transparent" Click="btnMinimize_Click" Margin="0 0 10 0">
                <fa:IconImage Icon="WindowMinimize" Foreground="#F3E8DF"/>
            </Button>
            <Button x:Name="btnMaximize" Width="45" Height="35" Background="Transparent" BorderBrush="Transparent" Click="btnMaximize_Click" Margin="0 0 10 0">
                <fa:IconImage Icon="WindowMaximize" Foreground="#F3E8DF"/>
            </Button>
            <Button x:Name="btnClose" Width="45" Height="35" Background="Transparent" BorderBrush="Transparent" Click="btnClose_Click" Margin="0 0 10 0">
                <fa:IconImage Icon="WindowClose" Foreground="#F3E8DF"/>
            </Button>  
        </StackPanel>
        
    </StackPanel>
    
</UserControl>
