<UserControl x:Class="Library.Views.MainMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:views="clr-namespace:Library.Views"
             mc:Ignorable="d" 
             d:DesignHeight="740" d:DesignWidth="1030">

    <Border CornerRadius="0 40 40 0">

        <!--Background MainMenu-->
        <Border.Background>
            <LinearGradientBrush StartPoint="0,1" EndPoint="1,2">
                <GradientStop Color="#181C14" Offset="0"/>
                <GradientStop Color="#F3E8DF" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>

        <!--4 linhas designadas-->
        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="70"/>
                <RowDefinition Height="100"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>

            <views:WindowsButtons Grid.Row="0"/>

            <views:SearchOrder Grid.Row="1"/>

            <views:BooksPainel Grid.Row="2"/>

        </Grid>

    </Border>

</UserControl>