<UserControl x:Class="Library.Views.SearchOrder"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Library.Views"
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             mc:Ignorable="d" 
             MinHeight="100" MinWidth="1030">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30*"/>
            <ColumnDefinition Width="20*"/>
        </Grid.ColumnDefinitions>

        <!--Input e botão OK-->
        <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left">

            <Border Height="40" Width="350" Margin="30 0 10 0"
                    CornerRadius="10" Background="#F3E8DF">
                <TextBox Height="40" Width="350"
                    FontWeight="ExtraLight" BorderThickness="0" FontSize="15"
                    Background="Transparent" Foreground="#57595B"/>
            </Border>

            <Border Width="50" Height="40" 
                    CornerRadius="10"  Background="#57595B">
                <Button Content="OK" FontFamily="Cascadia Mono" FontSize="20"
                    Background="Transparent" Foreground="#F3E8DF" BorderThickness="0" x:Name="Ok_Button" Click="Ok_Button_Click"/> 
            </Border>
             
            
        </StackPanel>

        <!--OrderBy e botão OrderBy_Button-->

        <Menu Grid.Column="1" HorizontalAlignment="Right" Height="40" Width="160" Background="Transparent">

            <TextBox Height="40" Margin="0 0 5 0"
             FontFamily="Cascadia Mono" FontSize="20" Text="OrderBy" BorderThickness="0"
             VerticalContentAlignment="Center" HorizontalContentAlignment="Center"
             Background="Transparent" Foreground="#F3E8DF"/>

            <Button Name="OrderByButton" Background="Transparent" Click="OrderByButton_Click">
                <fa:IconImage Icon="Filter" Foreground="#F3E8DF" Height="25"/>
                <Button.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="Name"/>
                        <MenuItem Header="Year (latest)"/>
                        <MenuItem Header="Year (oldest)"/>
                    </ContextMenu>
                </Button.ContextMenu>
            </Button>

        </Menu>
            
            
        
        
        
    </Grid>
    
</UserControl>
