<UserControl x:Class="Library.Views.BooksPainel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vm="clr-namespace:Library.ViewModel"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type=vm:BooksViewModel, IsDesignTimeCreatable=True}"
             d:DesignHeight="520" d:DesignWidth="1030">

    <UserControl.Resources>

        <!--Personalização da ScrollBar-->
        <Style TargetType="ScrollBar" x:Key="ScrollBarBooksPainel">
            <Setter Property="Width" Value="8"/>
            <Setter Property="Margin" Value="0 0 10 0"/>
            <Setter Property="Template"> <!--alterando o molde padrão de scrollbar-->
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollBar">
                        <Grid Background="Transparent">
                            <Track Name="PART_Track" IsDirectionReversed="True"> <!--alterando o trilho de scroll-->
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton Command="ScrollBar.LineUpCommand" Visibility="Collapsed"/>
                                </Track.DecreaseRepeatButton>
                                <Track.IncreaseRepeatButton>
                                    <RepeatButton Command="ScrollBar.LineDownCommand" Visibility="Collapsed"/>
                                </Track.IncreaseRepeatButton>
                                <Track.Thumb>
                                    <Thumb>
                                        <Thumb.Style>
                                            <Style TargetType="Thumb">
                                                <Setter Property="Background" Value="#F3E8DF"/>
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#000000"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Thumb.Style>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

        </Style>


    </UserControl.Resources>

    <Border Padding="15" CornerRadius="50" BorderThickness="5" Margin="0 0 30 0">

        <Border.Background>
            <LinearGradientBrush StartPoint="0,1" EndPoint="0,0">
                <GradientStop Color="#000000" Offset="0"/>
                <GradientStop Color="#00000a" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>

        <Grid>

            <ListView ItemsSource="{Binding FilteredBooks}" ScrollViewer.ScrollChanged="ListView_ScrollChanged" 
              ScrollViewer.VerticalScrollBarVisibility="Auto"
              ScrollViewer.CanContentScroll="True" Padding="10"
              Background="Transparent" BorderThickness="0">

                <!--Alterando os recursos padrão de componentes da ListView-->
            <ListView.Resources>
                <Style TargetType="ScrollBar" BasedOn="{StaticResource ScrollBarBooksPainel}"/>
            </ListView.Resources>

            <!--Alterando o formato de exibiçao dos itens do painel-->
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Columns="5"/>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>

            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <!--Removendo a exibição padrão (azul)-->
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="BorderBrush" Value="Transparent"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListViewItem">
                                <ContentPresenter/>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListView.ItemContainerStyle>

            <!--Modelo de cada livro-->
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Border BorderBrush="#E8D1C5" BorderThickness="1" CornerRadius="4"
                            Margin="5" Width="170" Height="270">

                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1, 1" Opacity="0.9">
                                    <GradientStop Color="#57595B" Offset="0"/>
                                    <GradientStop Color="#E8D1C5" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>

                            <!--Criei esse grid para habilitar mais de um filho (StackPanel e PopUp) dentro de Border (que uso para cornerradius), visto que ele só aceita 1 filho-->
                            <Grid>
                                <StackPanel Orientation="Vertical" Margin="8">
                                    <Image Source="{Binding Thumbnail}" Width="100" Height="150" Margin="0 0 0 5"/>
                                    <TextBlock Text="{Binding Title}" FontWeight="Bold" FontSize="16"/>
                                    <TextBlock Text="{Binding Author}" FontWeight="SemiBold" FontSize="12" FontStyle="Italic"/>
                                    <TextBlock Text="{Binding Category}" Foreground="#57595B"/>
                                    <TextBlock Text="{Binding YearPublished}" Foreground="#57595B"/>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding NumberOfPages}" Foreground="#57595B"/>
                                        <TextBox Background="Transparent" BorderThickness="0" Text="pages" Foreground="#57595B"/>
                                    </StackPanel>
                                </StackPanel>

                            </Grid>

                        </Border>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>

        </ListView>

        </Grid>       
    </Border>


</UserControl>